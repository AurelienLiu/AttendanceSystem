<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liuxuanchi.project">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".peopleManagement.PeopleManagement"
            android:label="人员管理">
        </activity>
        <activity
            android:name=".peopleManagement.PeopleInformation" />
        <activity android:name=".peopleManagement.PeopleEdit"
            android:label="信息编辑"></activity>
        <provider
            android:authorities="com.example.liuxuanchi.project.fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

        <activity android:name=".login.MainActivity" />
        <activity
            android:name=".login.LoginActivity"
            android:label="登录">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.RegisterActivity"
            android:label="注册" />
        <activity
            android:name=".login.ForgetPassActivity"
            android:label="忘记密码"/>
        <activity
            android:name=".statistics.statistics.StatisticsActivity"
            android:label="数据统计">
        </activity>
    </application>

</manifest>